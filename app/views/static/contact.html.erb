<% content_for(:title, t('.title')) %>
<div class="container mx-auto px-5 flex justify-center align-center">
  <div class="w-full max-w-md mt-10 mb-32">
    <div class="text-center mb-3">
      <h1 class="text-lg font-bold tracking-wider mb-4">お問い合わせ</h1>
    </div>
    <%= form_with(model: @contact, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :内容 %>
          <%= f.text_area :body, class: "form-control", rows: "7" %>
        </div>
        <%= f.submit "送信", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>