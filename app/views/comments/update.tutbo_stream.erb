<% if @comment.errors.present? %>
  <%= turbo_stream.replace "comment-form-#{@comment.id}" do %>
    <%= render 'comments/edit_comment_form', comment: @comment %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "comment-#{@comment.id}" do %>
    <%= render 'comments/comment', comment: @comment %>
  <% end %>
<% end %>
