<header>
  <%# navbar %>
  <nav class="navbar navbar-expand-md" style="background-color: #e3f2fd;" >
    <div class="container-fluid">
      <%# navbar-brandではアプリ名やアプリの画像などを設定する %>
      <%= link_to "バード", root_path, class: "navbar-brand" %>
      <%# ハンバーガーメニュー %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <%# 左に表示されるもの %>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class='navbar-nav ms-auto main-nav align-items-center'>
          <li class='nav-item dropdown dropdown-slide'>
            <%= link_to "投稿", '#', class: 'nav-link dropdown-toggle', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-board-menu' %>
            <div class='dropdown-menu dropdown-menu-end'>
              <%= link_to '投稿一覧', posts_path, class: 'dropdown-item' %>
              <%= link_to '新規投稿', new_post_path, class: 'dropdown-item' %>
            </div>
          </li>
          <li class='nav-item dropdown dropdown-slide'>
            <%= link_to "掲示板", '#', class: 'nav-link dropdown-toggle', data: { bs_toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' }, id: 'header-board-menu' %>
            <div class='dropdown-menu dropdown-menu-end'>
              <%= link_to '掲示板一覧', '#', class: 'dropdown-item' %>
              <%= link_to '掲示板投稿', '#', class: 'dropdown-item' %>
            </div>
          </li>
        </ul>

        <%# 右に表示されるもの %>
        <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to 'ログアウト', logout_path, class: 'nav-link', data: { turbo_method: :delete } %>
          </li>
          <li class="nav-item ml-3">
            <%= link_to 'マイページ', profile_path, class: 'nav-link' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
