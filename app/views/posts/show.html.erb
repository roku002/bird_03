<% content_for(:title, @post.title) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1>投稿詳細画面</h1>
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
            <!-- image_tagを使う形に修正してください -->
              <%= image_tag "post_placeholder.png", class: "card-img-top img-fluid", width: "300", height: "200" %>
            </div>
            <div class="col-md-9">
              <h3 style="display: inline;"><%= @post.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@post.user.name}" %></li>
                <li class="list-inline-item"><%= l @post.created_at, format: :short %></li>
              </ul>
              <% if current_user.own?(@post) %>
                <div class='d-flex justify-content-end'>
                  <%= link_to edit_post_path(@post), id: "button-edit-#{@post.id}" do %>
                    <i class="bi bi-pencil-fill"></i>
                  <% end %>
                  <%= link_to post_path(@post), id: "button-delete-#{@post.id}", data: { turbo_method: :delete, turbo_confirm: '削除しますか？'} do %>
                    <i class="bi bi-trash-fill"></i>
                  <% end %>
                </div>
              <% end %>
              </div>
            </div>
            <p><%= simple_format(@post.body) %></p>
          </div>
        </article>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        シェア
      </div>
    </div>
  </div>
</div>