<% content_for(:title, @post.title) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
            <!-- image_tag„Çí‰Ωø„ÅÜÂΩ¢„Å´‰øÆÊ≠£„Åó„Å¶„Åè„Å†„Åï„ÅÑ -->
              <% if @post.image? %>
                <%= image_tag @post.image.url, class:"card-img-top", width: "300", height:"200"%>
              <% else %>
                <%= image_tag "post_placeholder.png", class: "card-img-top", width: "300", height:"200" %>
              <% end %>
            </div>
            <div class="col-md-9">
              <h3 style="display: inline;"><%= @post.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><a href="/posts/new"><%= "by #{@post.user.name}" %></a></li>
                <li class="list-inline-item"><%= l @post.created_at, format: :short %></li>
              </ul>
              <% if current_user &&  current_user.own?(@post) %>
                <div class='d-flex justify-content-end'>
                  <%= link_to edit_post_path(@post), id: "button-edit-#{@post.id}" do %>
                    <i class="bi bi-pencil-fill"></i>
                    üñäÔ∏è
                  <% end %>
                  <%= link_to post_path(@post), id: "button-delete-#{@post.id}", data: { turbo_method: :delete, turbo_confirm: 'ÂâäÈô§„Åó„Åæ„Åô„ÅãÔºü'} do %>
                    <i class="bi bi-trash-fill"></i>
                    üóëÔ∏è
                  <% end %>
                </div>
              <% else %>
                <div class="d-flex">
                  <div class='ms-auto'>
                    <%= render 'like_buttun', { post: @post } %>
                  </div>
                </div>
              <% end %>
            </div>
              <div class="d-flex">
                <div class='ms-auto'>
                  <% @post.tags.each do |tag| %>
                    <%= link_to tag.name, posts_path(tag_name: tag.name), class: "btn btn-primary btn-sm" %>
                  <% end %>
                </div>
              </div>
            </div>
            <p><%= simple_format(@post.body) %></p>
          </div>
        </div>
      </article>
    </div>
  </div>
  <div class="row">
    <div class="d-grid gap-2 col-2 offset-md-2">
      <a class="btn btn-primary btn-lg" href="#" role="button">„Ç∑„Çß„Ç¢</a>
    </div>
  </div>
</div>