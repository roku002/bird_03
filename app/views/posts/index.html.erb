<% content_for(:title, t('.title')) %>
<% breadcrumb :posts %>

<div class="container pt-3">
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="text-container">
      <h1>みんなの投稿一覧</h1>
      <div class="col-12">
        <div class="row">
          <% if @posts.present? %>
            <% @posts.each do |post| %>
              <%= render partial: 'post_index', locals: { post: post } %>
            <% end %>
          <% else %>
            <div class="mb-3">投稿がありません</div>
          <% end %>
        </div>
        <%= paginate @posts, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</div>
