<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">

  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <% @posts.each do |post| %>
            <%= render partial: 'post_index', locals: { post: post } %>
          <% end %>
        <% else %>
          <div class="mb-3">投稿がありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>